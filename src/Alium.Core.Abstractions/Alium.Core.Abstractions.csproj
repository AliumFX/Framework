<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Alium</RootNamespace>
  </PropertyGroup>

  <Import Project="../../build-template/build.targets" />

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="$(NETCorePartsVersion)" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Abstractions" Version="$(NETCorePartsVersion)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="$(NETCorePartsVersion)" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="$(NETCorePartsVersion)" />
    <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="$(NETCorePartsVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="CoreAbstractionsResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>CoreAbstractionsResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="CoreAbstractionsResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>CoreAbstractionsResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
</Project>